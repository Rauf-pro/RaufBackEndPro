@model List<AboutUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="AboutUs" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row"></th>
                            <td><img src="~/Uploads/@item.Image" style="width: 100px" alt="Image" /></td>
                            <td>@item.Title</td>
                            <td>@item.Content</td>
                            <td>
                                <a class="btn btn-success mb-1" asp-area="admin" asp-controller="AboutUs" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                <a class="btn btn-danger" asp-area="admin" asp-controller="AboutUs" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

