@model ContactInfo
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="ContactInfo" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Title">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.ReceptPhone">ReceptPhone</label>
                    <input class="form-control" asp-for="@Model.ReceptPhone">
                    <span asp-validation-for="@Model.ReceptPhone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.ComplantPhone">Link</label>
                    <input class="form-control" asp-for="@Model.ComplantPhone">
                    <span asp-validation-for="@Model.ComplantPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.SupportPhone">Link</label>
                    <input class="form-control" asp-for="@Model.SupportPhone">
                    <span asp-validation-for="@Model.SupportPhone" class="text-danger"></span>
                </div>




                <button type="submit" class="btn btn-primary">Create</button>
                <button type="submit" class="btn btn-dark" asp-area="admin" asp-controller="ContactInfo" asp-action="Index">Back to List</button>

            </form>
        </div>
    </div>
</div>


