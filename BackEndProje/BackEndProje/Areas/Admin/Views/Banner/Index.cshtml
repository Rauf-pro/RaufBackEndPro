@model List<BackEndProje.Models.Banner>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <a class="btn btn-primary" asp-area="admin" asp-controller="Banner" asp-action="Create" >Create</a>
</div>
<div class="col-lg-12 mt-3">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Subtitle</th>
                <th scope="col">Page</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0;
                foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.Title</td>
                        <td>@item.SubTitle</td>
                        <td>@item.Page</td>
                        <td>
                            <a class="btn btn-success" asp-area="Admin" asp-controller="Banner" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Banner" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>


