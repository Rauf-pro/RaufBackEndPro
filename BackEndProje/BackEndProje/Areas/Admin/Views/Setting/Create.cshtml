@model Setting
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Setting" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.FileImage">Logo</label>
                    <input class="form-control" asp-for="@Model.FileImage">
                    <span asp-validation-for="@Model.FileImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.FileBgImage">Logo</label>
                    <input class="form-control" asp-for="@Model.FileBgImage">
                    <span asp-validation-for="@Model.FileBgImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Address">Address</label>
                    <input class="form-control" asp-for="@Model.Address">
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">Email</label>
                    <input class="form-control" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Phone">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone">
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>



                <button type="submit" class="btn btn-primary">Create</button>
                <button type="submit" class="btn btn-dark" asp-area="admin" asp-controller="Setting" asp-action="Index">Back to List</button>

            </form>
        </div>
    </div>
</div>

