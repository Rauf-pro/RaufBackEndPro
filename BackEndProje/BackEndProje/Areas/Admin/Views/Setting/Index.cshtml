@model Setting
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Setting" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Logo</th>
                        <th scope="col">BgImage</th>
                        <th scope="col">ShorInfo</th>
                        <th scope="col">Address</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>

                    </tr>
                </thead>
                <tbody style="height: 107px; overflow: hidden; position: absolute;">
                    <tr>
                        <th scope="row"></th>
                        <td><img src="~/Uploads/@Model.Logo style="width: 100px" alt="Image" /></td>
                        <td><img src="~/Uploads/@Model.BgImage style="width: 100px" alt="Image" /></td>
                        <td>@Model.ShortInfo</td>
                        <td>@Model.Address</td>
                        <td>@Model.Email</td>
                        <td>@Model.Phone</td>



                        <td>
                            <a class="btn btn-success mb-1" asp-area="admin" asp-controller="Setting" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                            <a class="btn btn-danger" asp-area="admin" asp-controller="Setting" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

